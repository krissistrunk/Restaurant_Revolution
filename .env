# Application Environment
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database Configuration
DATABASE_URL=postgresql://ubuntu:password@localhost:5432/restaurant_revolution
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=restaurant_revolution
DATABASE_USER=ubuntu
DATABASE_PASSWORD=password

# Session and Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production
BCRYPT_ROUNDS=12

# CMS Configuration
CMS_API_KEY=your-cms-api-key
CMS_SPACE_ID=your-cms-space-id
CMS_ENVIRONMENT=master

# Twilio SMS Configuration (for notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Social Login
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@restaurant-revolution.com

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=restaurant-revolution-uploads

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=your-sentry-dsn

# CI/CD and Deployment
DEPLOY_HOOK_URL=your-deploy-hook-url
GITHUB_TOKEN=your-github-token

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_QUEUE_MANAGEMENT=true
ENABLE_REAL_TIME_UPDATES=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Tools
ENABLE_DEV_TOOLS=true
