# RestaurantRush Environment Variables Example
# Copy this file to .env and fill in your values

# ===== CORE APPLICATION =====
PORT=5001
NODE_ENV=development

# ===== DATABASE =====
DATABASE_URL=postgresql://user:password@localhost:5432/restaurantrush

# ===== CMS INTEGRATION =====
ENABLE_CMS=true
CMS_FIRST=false
STRAPI_URL=http://localhost:1337
STRAPI_API_TOKEN=your_strapi_api_token_here
CMS_CACHE_TIMEOUT=300000

# ===== STRAPI CMS VARIABLES =====
# Generate these with: openssl rand -base64 32
ADMIN_JWT_SECRET=your_admin_jwt_secret_here
API_TOKEN_SALT=your_api_token_salt_here
JWT_SECRET=your_jwt_secret_here
APP_KEYS=key1,key2,key3,key4

# ===== DATABASE PASSWORDS =====
POSTGRES_PASSWORD=your_postgres_password_here

# ===== EXTERNAL SERVICES =====
# Twilio SMS Service
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# OpenAI API (for AI assistant)
OPENAI_API_KEY=your_openai_api_key

# ===== MEDIA UPLOAD PROVIDERS =====
# Cloudinary (recommended for production)
CLOUDINARY_NAME=your_cloudinary_cloud_name
CLOUDINARY_KEY=your_cloudinary_api_key
CLOUDINARY_SECRET=your_cloudinary_api_secret

# AWS S3 (alternative)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region
AWS_BUCKET=your_s3_bucket_name

# ===== SECURITY =====
# JWT Secret for user authentication
JWT_SECRET=your_app_jwt_secret_here

# Session secret
SESSION_SECRET=your_session_secret_here

# ===== MONITORING & ANALYTICS =====
# Sentry (error tracking)
SENTRY_DSN=your_sentry_dsn

# Google Analytics
GA_TRACKING_ID=your_google_analytics_id

# ===== EMAIL SERVICE =====
# SendGrid or similar
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourrestaurant.com

# ===== DEVELOPMENT =====
# Enable debug logs
DEBUG=true

# Hot reload for development
WATCH_MODE=true