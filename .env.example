# Restaurant Revolution v3 Environment Variables

# Application
NODE_ENV=development
PORT=5001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/restaurant_revolution
POSTGRES_PASSWORD=your_postgres_password

# Session & Security
SESSION_SECRET=your_session_secret_here_minimum_32_chars
JWT_SECRET=your_jwt_secret_here
ADMIN_JWT_SECRET=your_admin_jwt_secret_here
API_TOKEN_SALT=your_api_token_salt_here
APP_KEYS=key1,key2,key3,key4

# CMS Configuration
STRAPI_URL=http://localhost:1337
STRAPI_API_TOKEN=your_strapi_api_token

# OpenTable-Level SMS & Notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=your_twilio_phone_number

# Social Login (OAuth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
APPLE_CLIENT_ID=your_apple_client_id
APPLE_PRIVATE_KEY=your_apple_private_key

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email Service
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@restaurant-revolution.com

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=restaurant-revolution-uploads

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token

# Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key

# CI/CD
CODECOV_TOKEN=your_codecov_token
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Deployment
STAGING_DEPLOY_TOKEN=your_staging_deploy_token
PRODUCTION_DEPLOY_TOKEN=your_production_deploy_token

# Feature Flags
ENABLE_CMS=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_AI_FEATURES=true
ENABLE_VOICE_INTERFACE=true
# OpenTable-Level Features (NEW!)
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_GUEST_ANALYTICS=true
ENABLE_REAL_TIME_WAITLIST=true
ENABLE_SPECIAL_OCCASIONS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development
VITE_API_URL=http://localhost:5001/api
VITE_ENABLE_DEV_TOOLS=true